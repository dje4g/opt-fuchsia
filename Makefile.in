# Install fuchsia "opt" files.

SHELL = @SHELL@

# Used by docdir.
PACKAGE = opt-fuchsia

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
datarootdir = @datarootdir@
sysconfdir = @sysconfdir@
localstatedir = @localstatedir@
docdir = @docdir@

srcdir = @srcdir@
VPATH = @srcdir@

DESTDIR =

INSTALL = @INSTALL@

BINFILES = \
	opt-build \
	opt-install \
	opt-list-available \
	opt-list-installed \
	opt-uninstall

ETCFILES = \
	opt-apply-patches.sh \
	opt-build-world.sh \
	opt-config.sh\
	opt-make-root-tarballs.sh\
	opt-world.list \

all:
	@echo "Nothing to do."

clean:
	@echo "Nothing to do."

distclean:
	rm -f Makefile config.log config.cache config.status

install:
	$(SHELL) $(srcdir)/mkinstalldirs $(DESTDIR)src/patches
	$(SHELL) $(srcdir)/mkinstalldirs $(DESTDIR)src/specs
	for f in $(BINFILES) ; \
	do \
	  $(INSTALL) -m 0755 $(srcdir)/bin/$${f}.sh $(DESTDIR)$(bindir)/$$f ; \
	done
	for f in $(ETCFILES) ; \
	do \
	  $(INSTALL) -m 0644 $(srcdir)/etc/$$f $(DESTDIR)$(sysconfdir)/opt/$$f; \
	done
	for f in $(VARFILES) ; \
	do \
	  $(INSTALL) -m 0644 $(srcdir)/var/opt/$$f $(DESTDIR)$(localstatedir)/opt/$$f ; \
	done
	for f in $(DOCFILES) ; \
	do \
	  $(INSTALL) -m 0644 $(srcdir)/doc/$$f $(DESTDIR)$(docdir)/$$f ; \
	done

Makefile: Makefile.in config.status
	CONFIG_FILES="Makefile" \
	  CONFIG_COMMANDS= \
	  CONFIG_HEADERS= \
	  $(SHELL) config.status
